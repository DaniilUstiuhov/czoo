<Window x:Class="AnimalManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loomade Haldamise Süsteem" Height="600" Width="900"
        Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Vasak paneel - Loomade nimekiri -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="10" 
                BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Pealkiri -->
                <TextBlock Grid.Row="0" Text="🐾 Loomad" FontSize="18" 
                          FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>

                <!-- Loomade nimekiri -->
                <ListBox Grid.Row="1" x:Name="AnimalsListBox" 
                        SelectionChanged="AnimalsListBox_SelectionChanged"
                        FontSize="14" BorderThickness="1" BorderBrush="#DDDDDD">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Padding="5"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Nupud -->
                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <Button Content="➕ Lisa loom" Click="AddAnimal_Click" 
                           Background="#4CAF50" Foreground="White" 
                           Height="35" FontSize="14" FontWeight="Bold" 
                           Margin="0,0,0,5" BorderThickness="0" Cursor="Hand"/>

                    <Button Content="❌ Eemalda loom" Click="RemoveAnimal_Click" 
                           Background="#F44336" Foreground="White" 
                           Height="35" FontSize="14" FontWeight="Bold" 
                           BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Parem paneel - Detailid ja tegevused -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Looma detailid -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" 
                   BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="📝 Looma Detailid" FontSize="18" FontWeight="Bold" 
                              Foreground="#333333" Margin="0,0,0,10"/>

                    <TextBlock x:Name="DetailsTextBlock" Text="Vali loom vasakult..."
                              FontSize="14" TextWrapping="Wrap" Foreground="#666666"/>
                </StackPanel>
            </Border>

            <!-- Tegevuste paneel -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" 
                   BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="🎮 Tegevused" FontSize="18" 
                              FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>

                    <!-- Nupud -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="🔊 Tee hääl" Click="MakeSound_Click" 
                               Width="120" Height="35" Margin="0,0,10,0"
                               Background="#2196F3" Foreground="White" 
                               FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

                        <Button Content="🎪 Crazy Action!" Click="CrazyAction_Click" 
                               Width="140" Height="35" Margin="0,0,10,0"
                               Background="#FF9800" Foreground="White" 
                               FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

                        <Button Content="✈️ Lenda" Click="Fly_Click" 
                               Width="100" Height="35"
                               Background="#9C27B0" Foreground="White" 
                               FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Toitmise rida -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="Toit:" VerticalAlignment="Center" 
                                  FontSize="14" Margin="0,0,10,0" FontWeight="Bold"/>
                        <TextBox x:Name="FoodTextBox" Width="150" Height="30" 
                                VerticalContentAlignment="Center" Padding="5"/>
                        <Button Content="🍖 Toida" Click="Feed_Click" 
                               Width="100" Height="30" Margin="10,0,0,0"
                               Background="#8BC34A" Foreground="White" 
                               FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Logi -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" 
                   BorderBrush="#CCCCCC" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="📋 Logi" FontSize="18" 
                              FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>

                    <ListBox Grid.Row="1" x:Name="LogListBox" 
                            Background="#FAFAFA" BorderThickness="1" 
                            BorderBrush="#DDDDDD" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" 
                                          Padding="5" FontSize="12"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2" Content="🗑️ Tühjenda logi" 
                           Click="ClearLog_Click" Height="30" Margin="0,10,0,0"
                           Background="#607D8B" Foreground="White" 
                           FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>